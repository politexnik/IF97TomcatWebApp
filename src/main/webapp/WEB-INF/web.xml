<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>IF97WebApp</display-name>

  <!-- servlet for MainUrlServlet-->
  <servlet>
    <servlet-name>MainUrlServlet</servlet-name>
    <servlet-class>ru.politexnik.IF97WebApp.servlet.MainUrlServlet</servlet-class>
  </servlet>
  <!-- mapping for MainUrlServlet -->
  <servlet-mapping>
    <servlet-name>MainUrlServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- servlet for MainUrlServlet-->
  <servlet>
    <servlet-name>SaturationServlet</servlet-name>
    <servlet-class>ru.politexnik.IF97WebApp.servlet.SaturationServlet</servlet-class>
  </servlet>
  <!-- mapping for MainUrlServlet -->
  <servlet-mapping>
    <servlet-name>SaturationServlet</servlet-name>
    <url-pattern>/saturation</url-pattern>
  </servlet-mapping>

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.js</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

</web-app>
